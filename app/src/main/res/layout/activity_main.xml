<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_calc"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/visor_principal"
            android:layout_width="match_parent"
            android:layout_height="600px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="150px"
            android:background="@android:color/white"
            android:ems="10"
            android:elevation="20px"
            android:gravity="bottom|end"
            android:inputType="textPersonName"
            android:text="0"
            android:textColor="@android:color/black"
            android:textSize="20pt" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_marginBottom="10px"
                    android:background="@color/colorPrimary"
                    android:onClick="btnAction"
                    android:text="7"
                    android:textColor="@android:color/white"
                    android:textSize="8pt" />

                <Button
                    android:id="@+id/btn_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_marginBottom="10px"
                    android:background="@color/colorPrimary"
                    android:onClick="btnAction"
                    android:text="8"
                    android:textColor="@android:color/white"
                    android:textSize="8pt" />

                <Button
                    android:id="@+id/btn_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_marginBottom="10px"
                    android:background="@color/colorPrimary"
                    android:onClick="btnAction"
                    android:text="9"
                    android:textColor="@android:color/white"
                    android:textSize="8pt" />

                <Button
                    android:id="@+id/btn_backspace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_marginBottom="10px"
                    android:background="@android:color/holo_orange_dark"
                    android:onClick="btnAction"
                    android:text="CE"
                    android:textColor="@android:color/white"
                    android:textSize="8pt" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="10px"
                    android:layout_marginRight="10px"
                    android:layout_marginBottom="10px"
                    android:background="@color/colorPrimary"
                    android:onClick="btnAction"
                    android:text="4"
                    android:textColor="@android:color/white"
                    android:textSize="8pt" />

                <Button
                    android:id="@+id/btn_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="10px"
                    android:layout_marginRight="10px"
                    android:layout_marginBottom="10px"
                    android:background="@color/colorPrimary"
                    android:onClick="btnAction"
                    android:text="5"
                    android:textColor="@android:color/white"
                    android:textSize="8pt" />

                <Button
                    android:id="@+id/btn_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="10px"
                    android:layout_marginRight="10px"
                    android:layout_marginBottom="10px"
                    android:background="@color/colorPrimary"
                    android:onClick="btnAction"
                    android:text="6"
                    android:textColor="@android:color/white"
                    android:textSize="8pt" />

                <Button
                    android:id="@+id/btn_divisao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="10px"
                    android:layout_marginRight="10px"
                    android:layout_marginBottom="10px"
                    android:background="@color/colorPrimaryDark"
                    android:onClick="btnAction"
                    android:text="รท"
                    android:textColor="@android:color/white"
                    android:textSize="8pt" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="10px"
                    android:layout_marginRight="10px"
                    android:layout_marginBottom="10px"
                    android:background="@color/colorPrimary"
                    android:onClick="btnAction"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="8pt" />

                <Button
                    android:id="@+id/btn_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="10px"
                    android:layout_marginRight="10px"
                    android:layout_marginBottom="10px"
                    android:background="@color/colorPrimary"
                    android:onClick="btnAction"
                    android:text="2"
                    android:textColor="@android:color/white"
                    android:textSize="8pt" />

                <Button
                    android:id="@+id/btn_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="10px"
                    android:layout_marginRight="10px"
                    android:layout_marginBottom="10px"
                    android:background="@color/colorPrimary"
                    android:onClick="btnAction"
                    android:text="3"
                    android:textColor="@android:color/white"
                    android:textSize="8pt" />

                <Button
                    android:id="@+id/btn_multiplicacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="10px"
                    android:layout_marginRight="10px"
                    android:layout_marginBottom="10px"
                    android:background="@color/colorPrimaryDark"
                    android:onClick="btnAction"
                    android:text="ร"
                    android:textColor="@android:color/white"
                    android:textSize="8pt" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">


                <Button
                    android:id="@+id/btn_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="10px"
                    android:layout_marginRight="10px"
                    android:layout_marginBottom="10px"
                    android:layout_span="2"
                    android:background="@color/colorPrimaryDark"
                    android:onClick="btnAction"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="8pt" />

                <Button
                    android:id="@+id/btn_menos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="10px"
                    android:layout_marginRight="10px"
                    android:layout_marginBottom="10px"
                    android:background="@color/colorPrimaryDark"
                    android:onClick="btnAction"
                    android:text="-"
                    android:textColor="@android:color/white"
                    android:textSize="8pt" />

                <Button
                    android:id="@+id/btn_mais"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="10px"
                    android:layout_marginRight="10px"
                    android:layout_marginBottom="10px"
                    android:background="@color/colorPrimaryDark"
                    android:onClick="btnAction"
                    android:text="+"
                    android:textColor="@android:color/white"
                    android:textSize="8pt" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_virgula"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="10px"
                    android:layout_marginRight="10px"
                    android:layout_marginBottom="10px"
                    android:background="@color/colorPrimaryDark"
                    android:onClick="btnAction"
                    android:text=","
                    android:textColor="@android:color/white"
                    android:textSize="8pt" />

                <Button
                    android:id="@+id/btn_igual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="10px"
                    android:layout_marginRight="10px"
                    android:layout_marginBottom="10px"
                    android:layout_span="3"
                    android:background="@color/colorPrimaryDark"
                    android:onClick="btnAction"
                    android:text="="
                    android:textColor="@android:color/white"
                    android:textSize="8pt" />


            </TableRow>
        </TableLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>